[general]
accounts = main
pythonfile = ~/.emacs.d/.offlineimap.py

[Account main]
localrepository = main_local
remoterepository = main_remote
status_backend = sqlite

[Repository main_local]
type = Maildir
localfolders = ~/Maildir

[Repository main_remote]
type = IMAP
remotehost = imap.openmailbox.org
remoteuser = {{ offline_imap_email }}
remotepasseval = get_password("imap.openmailbox.org", "{{ offline_imap_email }}", "993")
ssl = yes
maxconnections = 1
realdelete = no
folderfilter = lambda f: f != "Spam"
holdconnectionopen = true
keepalive = 60
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
